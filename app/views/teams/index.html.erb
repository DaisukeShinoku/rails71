<div>
  <h1>参加チーム一覧</h1>
  <% if @teams.present? %>
    <ul>
      <% @teams.each do |team| %>
        <li><%= link_to team.name, team_url(team) %></li>
      <% end %>
    </ul>
  <% else %>
    <div>チームが登録されていません。</div>
  <% end %>
  <%= link_to '参加チーム新規登録', new_team_url %> |
  <%= link_to '選手一覧', players_url %>
</div>