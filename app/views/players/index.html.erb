<div>
  <h1>選手一覧</h1>
  <% if @players.present? %>
    <ul>
      <% @players.each do |player| %>
        <li><%= link_to player.name, team_player_url(player.team_id, player.id) %></li>
      <% end %>
    </ul>
  <% else %>
    <div>選手が登録されていません。</div>
  <% end %>
  <%= link_to "参加チーム一覧", teams_url %>
</div>